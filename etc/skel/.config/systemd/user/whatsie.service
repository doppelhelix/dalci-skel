[Unit]
Description=WhatsApp desktop app
Documentation=https://github.com/keshavbhatt/whatsie

After=network-online.target graphical-session.target
Wants=network-online.target nss-lookup.target

[Service]
#ExecStartPre=sh -c 'sleep 5 && until ping -c 1 example.com; do sleep 1; done'
ExecStartPre=/bin/sleep 1
ExecStart=whatsie
ExecStop=killall whatsie
Slice=app-graphical.slice

[Install]
WantedBy=graphical-session.target
