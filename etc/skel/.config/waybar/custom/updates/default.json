{
    "custom/updates": {
        "format": "{icon}",
        "return-type": "json",
        "format-icons": {
            "has-updates": "󰻌",
            "updated": "󰕥"
        },
        "exec-if": "which waybar-module-pacman-updates",
        "exec": "waybar-module-pacman-updates  --interval-seconds 5 --network-interval-seconds 300",
        "on-click": "kitty --title update-sys --class update-sys sh -c '~/.base16_theme; yay -Syu'"
    }
}
